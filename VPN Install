Создать GRE_tunn_Stronswan_ipsec

#Stronswan realization ipsec tunneling (router 1 WAN ip - 10.10.10.10, router 2 WAN ip - 10.20.20.10)
apt install strongswan

###################################################################################

cat /etc/gre.up (router2)
#!/bin/bash
ip tunnel add tun1 mode gre local 10.10.10.10 remote 10.20.20.10 ttl 64
ip link set tun1 up
ip addr add 10.5.5.1/30 dev tun1

###################################################################################

cat /etc/gre.up (router1)
#!/bin/bash
ip tunnel add tun1 mode gre local 10.20.20.10 remote 10.10.10.10 ttl 64
ip link set tun1 up
ip addr add 10.5.5.2/30 dev tun1

###################################################################################
echo  '@reboot root /etc/gre.up' >> /etc/crontab

###################################################################################

cat /etc/ipsec.conf (router1)
# ipsec.conf - strongSwan IPsec configuration file
# basic configuration
config setup
        # strictcrlpolicy=yes
        # uniqueids = no
conn vpn
        auto=start
        type=tunnel
        authby=secret
        left=10.10.10.10
        right=10.20.20.10
        leftsubnet=100.200.100.0/24,192.168.1.0/24,192.168.2.0/24,192.168.3.0/24
        rightsubnet=152.32.66.0/24,10.10.10.0/24,10.10.20.0/24
        leftprotoport=gre
        rightprotoport=gre
        ike=aes128-sha256-modp3072
        esp=aes128-sha256

###################################################################################

#For 2 router conf:
cat /etc/ipsec.conf (on central router, which connects to another routers) (COD-RTR)
# ipsec.conf - strongSwan IPsec configuration file

# basic configuration

config setup
        # strictcrlpolicy=yes
        # uniqueids = no
conn vpn
        auto=start
        type=tunnel
        authby=secret
        left=10.10.10.10
        right=10.20.20.10
        leftsubnet=152.32.66.0/24,10.10.10.0/24,10.10.20.0/24
        rightsubnet=100.200.100.0/24,192.168.1.0/24,192.168.2.0/24,192.168.3.0/24
        leftprotoport=gre
        rightprotoport=gre
        ike=aes128-sha256-modp3072
        esp=aes128-sha256

#conn vpn1 (Для второго VPN)
